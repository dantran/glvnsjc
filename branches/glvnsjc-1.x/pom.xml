<?xml version="1.0" encoding="UTF-8" ?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  
  <groupId>org.glvnsjc</groupId>
  <artifactId>glvnsjc</artifactId>
  <version>1.1-SNAPSHOT</version>
  
  <name>glvnsjc</name>
  
  <organization>
    <name>Giao Ly Viet Ngu St. Patrick, Sanjose, CA</name>
    <url>https://glvnsjc.dev.java.net/</url>
  </organization>
  
  <inceptionYear>2003</inceptionYear>
  
  
  <packaging>pom</packaging>

  <description>
    ${pom.name} is a web database application.  It keeps track of
    students and instructors historical information.
  </description>

  <url>http://glvnsjc.homedns.org/webdav/site/index.html</url>

  <distributionManagement>
    <repository>
      <id>glvnsjc.repo</id>
      <name>glvnsjc central repository</name>
      <url>dav:http://glvnsjc.homedns.org/webdav/maven2</url>
    </repository>
    <snapshotRepository>
      <id>glvnsjc.snapshot</id>
      <name>glvnsjc snapshot repository</name>
      <url>dav:http://glvnsjc.homedns.org/webdav/snapshots</url>
    </snapshotRepository>
    <site>
      <id>glvnsjc.site</id>
      <name>glvnsjc web site</name>
      <url>dav:http://glvnsjc.homedns.org/webdav/site</url>
    </site>
  </distributionManagement>

  <scm>
    <connection>scm:svn:https://glvnsjc.dev.java.net/svn/glvnsjc/trunk/modules</connection>
    <developerConnection>scm:svn:https://glvnsjc.dev.java.net/svn/glvnsjc/trunk/modules</developerConnection>
    <url>https://glvnsjc.dev.java.net/source/browse/glvnsjc/trunk/modules</url>
  </scm>

  <developers>
    <developer>
      <name>Dan Thanh Tran</name>
      <id>dantran</id>
      <email>dantran@gmail.com</email>
      <organization>Giaoly Vietngu, San Jose, CA</organization>
    </developer>
  </developers>



  <repositories>
    <repository>
      <id>glvnsjc</id>
      <name>glvnsjc maven repository</name>
      <url>http://glvnsjc.homedns.org/webdav/maven2</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>

  <modules>
    <module>glvnsjc-common</module>
    <module>glvnsjc-model</module>
    <module>glvnsjc-web</module>
    <module>glvnsjc-itest</module>
  </modules>
    
    
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jxr-plugin</artifactId>
      </plugin>    
    </plugins>
  </reporting>    


  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav</artifactId>
        <version>1.0-beta-2</version>
      </extension>
    </extensions>
    
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.5.1</version>
          <configuration>
            <workspace>${basedir}</workspace>
            <wtpversion>1.5</wtpversion>
            <workspaceCodeStylesURL>
              http://svn.apache.org/repos/asf/maven/plugins/trunk/maven-eclipse-plugin/src/optional/eclipse-config/maven-styles.xml
            </workspaceCodeStylesURL>
          </configuration>
        </plugin>
        
        <plugin>
          <artifactId>maven-site-plugin</artifactId>
          <configuration>
            <inputEncoding>utf-8</inputEncoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <version>2.0-beta-7</version>
          <configuration>
            <tagBase>https://glvnsjc.dev.java.net/svn/glvnsjc/tags</tagBase>
            <preparationGoals>clean</preparationGoals>
            <autoVersionSubmodules>true</autoVersionSubmodules>            
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>


  <profiles>
  
    <profile>
      <id>add-itest-module</id>
      <activation>
        <property>
          <name>itest</name>
          <value>true</value>
        </property>
      </activation>
      <modules>
        <module>glvnsjc-itest</module>
      </modules>
    </profile>
  </profiles>


</project>